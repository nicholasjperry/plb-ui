{
  "compilerOptions": {
    "target": "ESNext",                            
    "jsx": "preserve",                             
    "experimentalDecorators": true,                
    "module": "ESNext",                            
    "moduleResolution": "node",                    
    "resolveJsonModule": true,                     
    "sourceMap": true,                             
    "noEmit": true,                                
    "importHelpers": true,                         
    "allowSyntheticDefaultImports": true,          
    "esModuleInterop": true,
    "strict": true,                                
    "noImplicitAny": true,                         
    "noUnusedLocals": true,                        
    "skipLibCheck": true,                          
  },
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  },
  "include": [
    "src/**/*.vue", 
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "vite.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
